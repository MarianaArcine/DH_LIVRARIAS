<%- include("./partials/header") %>
<% for(let i = 0; i < postagens.length; i++){ %>
    <div class="card">
      <div class="card-header">
        <img src="/uploads/fotos_perfil/<%= postagens[i].usuario_obj.foto_perfil %>" alt="mdo" width="32" height="32" class="rounded-circle me-3">
        <span><%= postagens[i].usuario_obj.nome %></span>
      </div>
      <img src="/uploads/publicacoes/<%= postagens[i].imagem %>" class="card-img-top" alt="">
      <div class="card-body">
        <ul class="nav d-flex mb-2" style="font-size: 1.4rem;">
          <li><a href="/post/curtir/<%= postagens[i].id %>" class="nav-link text-dark px-3 py-0"><i class="bi bi-heart"></i></a></li>
          <li><a href="#" class="nav-link text-dark px-3 py-0"><i class="bi bi-send"></i></a></li>
          <li><a href="#" class="nav-link text-dark px-3 py-0"><i class="bi bi-chat-text"></i></a></li>
          <li class="ms-auto"><a href="#" class="nav-link text-dark px-3 py-0"><i class="bi bi-bookmark"></i></a></li>
        </ul>
          <strong>Usuário</strong>
          <div class="card-text"><p><%= postagens[i].texto %></p></div>
          <p style="font-size: 0.75rem"><em><a href="#">Ver todos os 3 comentários</a></em><br /><em><%= postagens[i].createdAt %></em></p>
      </div>
    </div>
<% } %>
<%- include("./partials/footer") %>