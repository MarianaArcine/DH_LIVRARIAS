<%- include("./partials/header")%>
    <main>
            <section>
                <!--artigo um -> informações pessoais! -->
                <article class="container-box">
                    <div class="container-inicio">
                        <h2> <p class="um">1</p>Informações pessoais</h2> <a href="">Editar</a>
                    </div><!--container-inicio-->
                    <div class="input">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" name="nome" placeholder="Digite seu nome"/>
                    </div><!--input-->
                    <div class="input">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" placeholder="Digite seu e-mail"/>
                    </div><!--input-->
                    <div class="input">
                        <label for="telefone">Telefone</label>
                        <input type="tel" id="telefone" name="telefone" placeholder="Digite seu telefoe"/>
                    </div><!--input-->
                    <div class="input">
                        <label for="cpf">CPF</label>
                        <input type="text" id="cpf" name="cpf" placeholder="Digite seu cpf"/>
                    </div><!--input-->
                </article><!--container-box-->

                <!--artigo 2 - endereço de entrega !-->

                <article class="container-box">
                    <div class="container-inicio">
                        <h2> <p class="dois">2</p>Endereço de entrega</h2> <a href="">Editar</a>
                    </div><!--container-inicio-->
                    <div class="input">
                        <label for="Rua">Rua</label>
                        <input type="text" id="rua" name="rua" placeholder="Digite seu Endereço"/>
                    </div><!--input-->
                    <div class="input">
                        <label for="estado">Estado</label>
                        <input type="text" id="estado" name="estado" placeholder="Digite seu estado"/>
                    </div><!--input-->
                    <div class="input">
                        <label for="cep">CEP</label>
                        <input type="text" id="cep" name="cep" placeholder="Digite seu cep"/>
                    </div><!--input-->
                </article><!--container-box-->
            </section>
       
            <section>
                        <!--artigo 3 - formas de envio! -->

                <article class="container-box">
                    <div class="container-inicio">
                        <h2> <p class="tres">3</p>Formas de envio</h2> <a href="">Ver detalhes</a>
                    </div><!--container-inicio-->
                    <div class="container-meio">
                        <h3>Entrega Grátis</h3>
                        <p>Previsto para 30/03/2022 <br> até 31/03/2022</p>
                    </div><!--container-meio-->
                    <div class="container">
                        <p>Ver outras formas de envio</p>
                    </div><!--containerout-->
                    </article><!--container-box-->

                    <!--Forma de pagamento-->

                <article class="container-box">
                    <div class="container-inicio">
                        <h2> <p class="quatro">4</p>Formas de pagamento</h2>
                    </div><!--container-inicio-->
                    <div class="container-desconto">
                        <div class="img">
                            <img src="imagens/cupom.png" alt="cupom"/>
                        </div> <!--img-->
                        <div class="cupom">
                        <h3>Possui cupom de desconto?</h3>
                        <a href="">valide seu cupom de desconto aqui</a>
                    </div><!--cupom-->
                    </div><!--container-desconto-->
                    <div class="mensagem">
                        <p>Selecione uma forma de pagamento para finalizar seu pedido:</p>
                        <div class="pagamentos">
                            <div class="conteudo">
                                <img src="imagens/pix.png" alt="pix"/>
                                <h4>Pix</h4>
                                <p class="p1">À vista 7% de Desconto!!!</p>
                            </div><!--conteudo-->
                        </div><!--pagamentos-->
                        <div class="pagamentos">
                            <div class="conteudo">
                                <img src="imagens/boleto.png" alt="boleto"/>
                                <h4>Boleto</h4>
                                <p>À vista 7% de Desconto!!!</p>
                            </div><!--conteudo-->
                        </div><!--pagamentos-->
                        <div class="pagamentos">
                            <div class="conteudo">
                                <img src="imagens/cartao.png" alt="cartao"/>
                                <h4>Cartão</h4>
                                <p class="p2"> Até 10x sem juros!!!</p>
                            </div><!--conteudo-->
                        </div><!--pagamentos-->
                    </div><!--mensagem-->
                </article><!--container-box-->
            </section>

            <!--finalização de pedido-->

            <section>
                <div class="container-box">
                    <h2>Resumo do pedido</h2>
                    <div class="container-inicio">
                        <div class="resumo">
                            <img src="imagens/livro.jpg" alt="livro"/>
                           <div class="texto">
                            <p>Livro python</p>
                            <p>R$ 24.99</p>
                        </div><!--text0-->
                        <a href="">voltar ao carrinho</a>
                        </div><!--resumo-->
                    </div><!--container-inicio-->
                    <div class="textarea">
                        <p>Observações</p>
                        <textarea class="obs" placeholder="Digite alguma observação sobre seu pedido"></textarea>
                    </div><!--textarea-->
                    <div class="final">
                        <p>Subtotal</p>
                        <p>24.99</p>
                    <div >
                        <p>Frete(entrega gratis)</p>
                        <p>Grátis</p>
                    </div>
                    <div>
                        <p>Total do pedido</p>
                        <p>R$ 24.99</p>
                    </div>
                    </div><!--final-->
                </div><!--container-box-->
                <div class="container-fim">
                    <button>Finalizar Pedido</button>
                </div><!--container-fim-->
            </section>
    </main>
    <%- include("./partials/footer")%>